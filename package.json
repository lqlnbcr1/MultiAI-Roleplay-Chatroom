{
  "name": "talk_room",
  "version": "1.0.0",
  "description": "A localized, collaborative AI role-playing chat room built with Next.js.",
  "main": "index.js",
  "scripts": {
    "dev": "next dev",
    "dev:lan": "echo \"---------------------------------------------------\" && echo \"Local LAN URL:\" && ifconfig | grep \"inet \" | grep -v 127.0.0.1 | awk '{print \"http://\" $2 \":3000\"}' && echo \"---------------------------------------------------\" && next dev -H 0.0.0.0",
    "build": "next build",
    "start": "next start",
    "lint": "next lint"
  },
  "keywords": [
    "ai",
    "chat",
    "roleplay",
    "nextjs",
    "react",
    "openai"
  ],
  "author": "Qilin Li",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^25.0.9",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@types/uuid": "^10.0.0",
    "autoprefixer": "^10.4.23",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.3",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.562.0",
    "next": "^16.1.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "uuid": "^13.0.0"
  }
